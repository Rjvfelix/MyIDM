<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- File Type Icon -->
            <ImageView
                android:id="@+id/file_type_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_file"
                android:contentDescription="@string/file_type"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:tint="?attr/colorOnSurface" />

            <!-- File Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/filename_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="filename.ext"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="video.mp4" />

                <TextView
                    android:id="@+id/url_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://example.com/file"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"
                    tools:text="https://example.com/video.mp4" />

            </LinearLayout>

            <!-- Type Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/type_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTTP"
                android:textSize="10sp"
                app:chipMinHeight="24dp"
                app:chipMinTouchTargetSize="24dp"
                style="@style/Widget.Material3.Chip.Assist" />

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progress="45"
                    android:progressTint="?attr/colorPrimary"
                    android:progressBackgroundTint="?attr/colorSurfaceVariant" />

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:layout_marginStart="8dp"
                    tools:text="45%" />

            </LinearLayout>

            <!-- Status and Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Status -->
                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Téléchargement en cours"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorPrimary"
                    tools:text="Téléchargement en cours" />

                <!-- Speed -->
                <TextView
                    android:id="@+id/speed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2 MB/s"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="1.2 MB/s" />

            </LinearLayout>

            <!-- Size and Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- File Size -->
                <TextView
                    android:id="@+id/size_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="125.5 MB"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="125.5 MB" />

                <!-- Date -->
                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/12/2024 14:30"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="15/12/2024 14:30" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <!-- Pause/Resume Button -->
            <ImageButton
                android:id="@+id/pause_resume_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pause"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/pause"
                android:tint="?attr/colorOnSurfaceVariant"
                android:visibility="visible"
                tools:visibility="visible" />

            <!-- Cancel Button -->
            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cancel"
                android:tint="?attr/colorOnSurfaceVariant"
                android:visibility="visible"
                tools:visibility="visible" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"
                android:tint="?attr/colorError"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- More Options Button -->
            <ImageButton
                android:id="@+id/more_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/more_options"
                android:tint="?attr/colorOnSurfaceVariant"
                android:visibility="visible"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 